<%= form_for(@restaurant) do |f| %>
	<%= f.text_field :name, placeholder: "Name" %><br>
	<%= f.text_field :picture, placeholder: "Image URL" %> <br>
	<%= f.text_area :description, placeholder: "Description" %><br>
	<%= f.text_field :location, placeholder: "Location" %><br>
	<%= f.number_field :capacity, placeholder: "Capacity" %><br>
	Open time: <%= f.time_field :open_time %><br>
	Close time: <%= f.time_field :close_time %><br>
	<%= f.submit class: "form_fields" %>
<% end %>