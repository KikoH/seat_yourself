<h2 id="tables-hover-rows">All Restaurants</h2>
<div class="bs-example" data-example-id="hoverable-table">
	<% @restaurants.each do |restaurant|%>
	<table class="table table-hover">
		<tbody>
			<tr>
				<td class="col-md-3" > <img src="<%=restaurant.picture %>" alt=""></td>
				<td class="col-md-3"><%= link_to restaurant.name, restaurant_path(restaurant) %> </td>
				<td class="col-md-3"><%= restaurant.location %> </td>
				<td class="col-md-3"><%= restaurant.description %> </td>
			</tr>
		</tbody>
	</table>
	<% end %>
</div>
