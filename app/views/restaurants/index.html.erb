<div class="restaurants_container">
	<h1>Restaurants</h1>
	<table class="users_table">
		<thead>
			<tr>
				<th>Name</th>
				<th>Location</th>
			</tr>
		</thead>

		<% @restaurants.each do |restaurant|%>
			<tr>
				<td><%= link_to restaurant.name, restaurant_path(restaurant) %></td>
				<td><%= restaurant.location %></td>			
			</tr>
		<% end %>
	</table>
	<br> <%= link_to "Create Restaurant", new_restaurant_path %>
</div>

