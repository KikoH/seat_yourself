<div class="container">
	<h1><%= @customer.name %></h1>
	<%= link_to "Edit", edit_customer_path %>
	<%#= link_to "Delete", @customer, method: :delete, data: { confirm: "Are you sure you want to delete this user?" } %>

	<p>
		Email: <%= @customer.email %><br>
	</p>

	<h1>Upcoming reservations</h1>

	<div class="row marketing">
		<% @customer.reservations.each do |res| %>
		<div class="col-lg-6">
			<h4><%= link_to res.restaurant.name, restaurant_path(res.restaurant) %></h4>
			<p>Date: <%= res.date %><br>
				Book time: <%= res.pretty_book_time %><br>
				Party size: <%= res.party_size %><br></p>
			</div>
			<% end %>
		</div>

		<%= link_to "Show all restaurants", restaurants_path %>